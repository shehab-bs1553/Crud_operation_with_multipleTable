@model IEnumerable<work_with_multiple_table.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center p-2 border border-dark">Department details &nbsp; &nbsp; </h2>
            <div class="text-lg-end p-2 ">
                <a class="btn btn-sm btn-outline-success m-1 p-1" asp-action="Create" asp-controller="Department">Add Department</a>

            </div>
            <table class="table table-bordered text-center p-2">
                <thead class="bg-dark text-light">
                    <tr>
                        <th>Department Name</th>
                        <th>Location</th>
                        <th>Department Code</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td>@d.deptname</td>
                            <td>@d.location</td>
                            <td>@d.deptcode</td>
                           
                            <td>
                                <a class="btn btn-sm btn-primary" asp-action="" asp-controller="Employee" asp-route-id="@d.DepartmentId">Edit</a>
                                <a class="btn btn-sm btn-danger" asp-action="" asp-controller="Employee" asp-route-id="@d.DepartmentId">Delete</a>
                                <a class="btn btn-sm btn-secondary" asp-action="" asp-controller="Employee" asp-route-id="@d.DepartmentId">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

